{{#if addNewArticle}}
<div>
 <form>
   <div class="form-group">
     <label for="title">Title</label>
     {{input value=title id="title"}}
   </div>

   <div class="form-group">
     <label for="author">Author</label>
     {{input value=author id="author"}}
   </div>

   <div class="form-group">
     <label for="section">Section</label>
     {{input value=section id="section"}}
   </div>

   <div class="form-group">
     <label for="body">Body</label>
     {{input value=body id="body"}}
   </div>

   <div class="form-group">
     <label for="image">Image URL</label>
     {{input value=image id="image"}}
   </div>

   <button {{action 'save1'}}>Save</button>
 </form>
</div>
 {{else}}
    <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
